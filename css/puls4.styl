azul = #22BCE0
grisOscuro = #444
naranja = #DD4F24
grisTexto = #7A7A7A

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?by6awc');
	src:url('../fonts/icomoon.eot?#iefixby6awc') format('embedded-opentype'),
		url('../fonts/icomoon.woff?by6awc') format('woff'),
		url('../fonts/icomoon.ttf?by6awc') format('truetype'),
		url('../fonts/icomoon.svg?by6awc#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color grisOscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

header
	background grisOscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	padding 0.5em
	overflow hidden
	position relative
	z-index 1
	
	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-weight bold
			font-size 14px
			font-style italic
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black 

			&:before
				display inline-block
				content "\e908"
				font-family "iconitos"
				margin 0 3px 0 0


		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.3em 0 0
			position relative
			z-index 2
			img
				width 50px;
				border-radius 50%;

		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%

			&:before
				content "\ea36"
				display inline-block
				font-family "iconitos"
				text-shadow 2px 1px 0 black


nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
		

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap

		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				&:after
					content " - "

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color grisTexto
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			overflow hidden
			padding 0.5em	

			.datos
				float right

				.comentarios
					background grisOscuro
					border radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.estrellita
				&:after
					color #E0D561
					content "\e9d9"
					font-family "iconitos"

			.votos
				float left

				.down 
				.up
					text-decoration none

				.down
					color red
					&:before
						font-family "iconitos"
						font-size 1em
						content "\ea36"
						vertical-align bottom

				.up
					color green
					&:before
						font-family "iconitos"
						font-size 1em
						content "\ea32"
						vartical-align bottom

		.descripcion
			color grisTexto

			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					margin 0 1em 0 0

				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color grisOscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0,5em 0.5em 0 0

			.imagen
				float left
				margin 0

				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					font-size 2.5em
					left 0
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			vertical-align top
			width 48%
			&:nth-child(odd)
				margin-right 2%